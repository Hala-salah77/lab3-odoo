<odoo>
    <data>
         <record id="hms_department_tree_view" model="ir.ui.view">
                        <field name = "name">departments tree view</field>
                        <field name = "model">hms.department</field>
                        <field name = "arch" type="xml">
                            <tree>
                                <field name="name"/>
                                <field name="is_opened"/>
                                <field name="patients_id"/>

                            </tree>
                        </field>


        </record>

        <record id="hms_department_action" model="ir.actions.act_window">
            <field name = "name">department</field>
            <field name = "res_model">hms.department</field>
            <field name = "view_mode">tree,form</field>
        </record>

        <menuitem id="hms_department_menu" name = "departments" parent="hms_data_menu" action="hms_department_action"/>
    </data>
</odoo>